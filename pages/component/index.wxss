.component-index-list {
    position: relative;
}

.component-index-list .youjiantou {
    float: right;
    line-height: 100rpx;
}

.component-index-list-item {
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    width: 90%;
    margin: 20rpx auto;
    background-color: #fff;
    margin-bottom: 0;
}

.component-index-list-item-hidden {
    background-color: #fff;
    color: #888;
}

.component-index-pages {
    overflow: hidden;
    width: 100%;
    position: relative;
    line-height: 80rpx;
    font-size: 28rpx;
    margin-left: 5%;
    margin-right: 5%;
    width: 90%;
    background-color: #fff;
    height: 0;
    opacity: 0;
    transform: translateY(-50%);
    transition: 0.3s;
}

.component-index-pages-show {
    height: auto;
    opacity: 1;
    transform: translateY(0);
}

.component-index-pages view:first-child {
    text-align: center;
    width: 100%;
}

.component-index-pages .icon-youjiantou {
    position: absolute;
    right: 5%;
    top: 0;
    line-height: 80rpx;
    font-size: 28rpx;
}

.component-index-pages:after {
    content: " ";
    position: absolute;
    left: 5%;
    bottom: 0;
    right: 5%;
    height: 1px;
    border-bottom: 1px solid #D9D9D9;
    color: #D9D9D9;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}